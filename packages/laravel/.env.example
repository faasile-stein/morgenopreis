APP_NAME="TravelTomorrow CMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:6800

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Supabase PostgreSQL Connection
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=64322
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=postgres

# For production, use Supabase connection pooler
# DB_HOST=db.your-project-ref.supabase.co
# DB_PORT=5432
# DB_PASSWORD=your-supabase-password

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis (shared with API)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=6125
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@traveltomorrow.com"
MAIL_FROM_NAME="${APP_NAME}"

# Supabase API (for media storage)
SUPABASE_URL=http://localhost:64321
SUPABASE_KEY=your-anon-key

# Express API (for data sync)
API_URL=http://localhost:6001

# AWS S3 (if using for media storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filament
FILAMENT_TIMEZONE=Europe/Brussels
FILAMENT_LOCALE=en
