{
  "name": "@traveltomorrow/database",
  "version": "1.0.0",
  "private": true,
  "description": "Database schema and migrations (Supabase)",
  "scripts": {
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:status": "npx supabase status",
    "migrate:dev": "npx supabase db push --local",
    "migrate:prod": "npx supabase db push --linked",
    "reset": "npx supabase db reset",
    "seed": "npx supabase db reset --db-url $DATABASE_URL",
    "types": "npx supabase gen types typescript --local > ../shared/src/types/database.types.ts",
    "link": "npx supabase link",
    "help": "npx supabase --help"
  },
  "dependencies": {},
  "devDependencies": {
    "supabase": "^1.142.2"
  }
}
