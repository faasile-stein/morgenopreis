# Server
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Supabase (get from: cd packages/database && npm run supabase:start)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your-anon-key-from-supabase-start
SUPABASE_SERVICE_KEY=your-service-role-key-from-supabase-start

# Redis (for API caching)
REDIS_URL=redis://localhost:6379

# Duffel API (Stage 2)
DUFFEL_API_KEY=duffel_test_xxxxx
DUFFEL_API_URL=https://api.duffel.com

# Booking.com Affiliate (Stage 5)
BOOKING_AFFILIATE_ID=your_affiliate_id
BOOKING_DEEP_LINK_BASE=https://www.booking.com/

# Stripe/Payment
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Email Configuration
# Providers: mailhog (dev), resend (prod - recommended), sendgrid (enterprise), smtp (custom)
EMAIL_PROVIDER=mailhog
EMAIL_FROM=noreply@traveltomorrow.be

# MailHog (Development)
MAILHOG_HOST=localhost
MAILHOG_PORT=1025

# Resend (Production - Recommended)
RESEND_API_KEY=re_xxxxx

# SendGrid (Enterprise Alternative)
SENDGRID_API_KEY=SG.xxxxx

# Custom SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_username
SMTP_PASSWORD=your_password

# External APIs
GEOLOCATION_API_KEY=
ANALYTICS_KEY=

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Logging
LOG_LEVEL=debug
